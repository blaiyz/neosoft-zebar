{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.1/resources/zpack-schema.json",
  "name": "zeosoft-nebar",
  "version": "0.6.9",
  "description": "Silly fork of a highly customizable (and smooooooth) Zebar build",
  "tags": [
    "glazewm",
    "media",
    "customizable",
    "ros√© pine",
    "catppuccin",
    "weather",
    "system stats",
    "autotiler",
    "volume"
  ],
  "previewImages": ["misc/fullscreen.png", "misc/taskbar-integration.png"],
  "repositoryUrl": "https://github.com/tylerdotrar/zeosoft-nebar",
  "widgets": [
    {
      "name": "Default",
      "htmlPath": "./index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": ["**"],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": [
          {
            "program": "cmd",
            "argsRegex": "\\/c start https:\\/\\/github\\.com\\/blaiyz\\/neosoft-zebar"
          },
          {
            "program": "shutdown",
            "argsRegex": ".*"
          }
        ]
      },
      "presets": [
        {
          "name": "Default",
          "anchor": "top_left",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "40px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": true,
            "edge": "top",
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
